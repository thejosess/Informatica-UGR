    <pattern>
        Cual es la capital de <set>pais</set>
    </pattern>
    <template>
        La capìtal de <star/> es <map name="capital"><star/></map>
    </template>
</category>

<!-- reglada copiada x2 -->
<category>
    <pattern>
        Cual es la capital de *
    </pattern>
    <template>
        No lo se
    </template>
</category>

<!-- regla copiada x3 -->

<category>
    <pattern>
        la capital de * es *
    </pattern>
    <template>
        <think>
        <set var="cap"><srai>CUAL ES LA CAPITAL DE <star/></srai></set>
        </think>
        <condition var="cap">
            <li value="NO LO SE">
            <learn> <!-- si pones learnf lo recuerda para la siguiente sesion -->
                <category>
                <pattern>
                    CUAL ES LA CAPITAL DE <eval><star/></eval>
                </pattern>
                <template>
                    La capital de <eval><star/></eval> es <eval><star index="2"/></eval>
                </template>
                </category>
            </learn>
            Recordare que la capital de <star/> es <star index="2"/>
            </li>

            <li>
            <think>
            <set var="capi"><map name="capital"><star/></map></set>
            </think>
            <condition var="capi">
                <li><value><star index="2"/></value> ya lo sabia chulo</li>
                <!-- <li><value><eval><star index="2"/></eval> ya lo sabia chulo </li> -->
                <li>No, la capital de <star/> es <get var="capi"/></li>
            </condition>
            </li>
        </condition>
    </template>
</category>

